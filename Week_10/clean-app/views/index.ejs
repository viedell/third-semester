<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>User List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>User List</h1>
    <a href="/register">Add New User</a>
    
    <ul>
      <% users.forEach(function(user) { %>
        <li>
          <strong>Name:</strong> <%= user.name %> | 
          <strong>Email:</strong> <%= user.email %>
        </li>
      <% }); %>
    </ul>
    
    <% if (users.length === 0) { %>
      <p>No users found.</p>
    <% } %>
  </body>
</html>
